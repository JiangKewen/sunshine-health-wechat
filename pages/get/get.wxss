.get {
  height: 100vh;
  box-sizing: border-box;
  background: #fff;
}
.get-page-title {
  /* background: linear-gradient(to bottom, RGB(38,154,254) 0%, rgb(38, 154, 254) 40%, #fff 90%, #fff); */
  /* background: rgb(38, 154, 254); */
  background: #62b7f9;
  color: #fff;
}
.get .page-back {
  border-color: #fff;
  border-right-color: transparent;
  border-bottom-color: transparent;
}

.container {
  padding: 20px 0;
}

.form-group {
  margin-bottom: 50rpx;
  display: flex;
  align-items: center;
}

.label {
  width: 80px;
  font-size: 24rpx;
}

.input {
  flex: 1;
  padding: 30rpx 40rpx;
  /* border: 1rpx solid rgb(179, 195, 238); */
  background: rgba(163, 163, 163, 0.1);
  border-radius: 8rpx;
  font-size: 30rpx;
  outline: none;
}

.code-button {
  padding: 32rpx 40rpx;
  border: none;
  background-color: #62b7f9;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  display: inline-block;
  margin-left: 10px !important;
  width: 36vw !important;
  height: 100%;
  margin-left: 6rpx;
}
.code-button[disabled]:not([type]) {
  color: rgba(0, 0, 0, 0.6);
}

.code-disabled {
  background-color: #ccc;
}

.submit-button {
  display: block;
  /* width: 80vw !important; */
  width: 100% !important;
  padding: 32rpx 40rpx;
  border: none;
  background-color: #62b7f9;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-top: 160rpx;
}

.xieyi-btn {
  position: fixed;
  bottom: 5vh;
  /* width: 60vw; */
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
